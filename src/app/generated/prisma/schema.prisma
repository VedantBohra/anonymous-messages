generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  username            String    @unique
  password            String
  verifyCode          String
  verifyCodeExpiry    DateTime
  isVerified          Boolean   @default(false)
  isAcceptingMessages Boolean   @default(true)
  message             Message[] // One to many relationships User can have many messages
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime
  userId    String // Foreign Key UserId (id) of the corresponding user
  user      User     @relation(fields: [userId], references: [id]) // user User table have a relation field is userId reference to id
}
